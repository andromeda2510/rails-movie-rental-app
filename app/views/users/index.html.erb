<div>
  <div class="d-flex flex-column align-items-center mt-4">
  <% @users.each do |user|  %>
    <div class="p-2 bg-light border m-2 w-25 d-flex justify-content-between">
      <span> <%= user.name %> </span>
      <div>
        <span class="mr-1" data-toggle="modal" data-target="#modal-<%= user.id %>" ><%= link_to "Edit", edit_user_path(user)%> </span>  | 
        <span class="ml-1"> <%= link_to "Delete", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete this user?"} %></span>
      </div>
    </div>
  <% end %>
  </div>
</div>